<Page x:Class="Restaurant.IngredientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant"
      mc:Ignorable="d" 
     d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Margin="5 10">
        
        <Grid VerticalAlignment="Top">
            <Button Content="Записати новий інгредієнт" VerticalAlignment="Top" Margin="0 0 0 20"  Click="CreateIngredientButton_Click"/>
        </Grid>

        <Grid  Margin="0 50 0 0">
            <Button Content="Зберегти зміни" VerticalAlignment="Top" Click="SaveChanges_Click"/>
        </Grid>
        
        <Grid Margin="0 50 0 0">
            <ScrollViewer Margin="0 50 0 0" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible">

                <StackPanel x:Name="IngredientsListStackPanel">

                </StackPanel>

            </ScrollViewer>
        </Grid>
       
    </Grid>
</Page>
